{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./out",
    "allowUnusedLabels": true
  },
  "include": [
    "./src/**/*",
    "./lib/**/*",
    "./index.ts",
    "./test/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}